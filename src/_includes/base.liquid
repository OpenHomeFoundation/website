<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ full_title }}</title>
    <meta name="description" content="{{ full_description }}">
    <meta name="viewport" content="width=device-width">
    <meta property="og:title" content="{{ full_title }}">
    <meta property="og:description" content="{{ full_description }}">
    <meta property="og:image" content="{{ og_image | default: '/assets/images/opengraph.jpg' }}">
    <link rel="stylesheet" href="/assets/swiper-bundle.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">

    <!-- Dark mode favicon -->
    <link
      rel="icon"
      href="/favicon-dark-16x16.png"
      type="image/x-icon"
      media="(prefers-color-scheme: dark)"
      sizes="16x16"
    >
    <link
      rel="icon"
      href="/favicon-dark-32x32.png"
      type="image/x-icon"
      media="(prefers-color-scheme: dark)"
      sizes="32x32"
    >

    <link href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&display=swap" rel="stylesheet">
    <script src="/assets/js/nav-menu.js" defer></script>
